<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/ic_thumbmail"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/thumbmail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_textview_drawer"
        android:text="@string/textview_drawer_recents_places"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/drawer_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_textview_drawer"
        android:background="@color/colorWhite"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"/>

</LinearLayout>